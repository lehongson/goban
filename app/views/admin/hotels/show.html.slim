p
  strong Name:
  = @hotel.name
p
  strong Countroom:
  = @hotel.countRoom
p
  strong Introduction:
  = @hotel.introduction
p
  strong Hotel kind:
  = @hotel.hotel_kind
p
  strong Phone number:
  = @hotel.phone_number
p
  strong Website:
  = @hotel.website
p
  strong Address:
  - @hotel.destination_addresses.each do |address|
    = address.village.name
    p ,
p
  strong Score average:
  = @hotel.score_average

.star-rating data-score="#{@hotel.avg_rate}"
